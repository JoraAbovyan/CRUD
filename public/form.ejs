

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body class="body">
    <ul>

        <% obj.forEach(function(justOne) { %>
        <li>
        <strong><%= justOne._id %></strong>
        </li>
        <% }); %>
    </ul>



    <div>
        <!-- <form class="form" action="/about" method="post"> -->
            <input  id="usName" type="text" required name="name" placeholder="Enter your product name"><br></br>
        <input  id="usPrice"  type="number" name="price" placeholder="Enter your product price  "><br></br>
        <input  id="usImg_url" type="text" name="img_url" placeholder="Enter your product image url"><br></br>
        <input  id="usDescription" type="text" name="description" placeholder="Enter your product description"><br></br>
        <input  id="usUuid" type="number" name="uuid" placeholder="Enter your product id"><br></br>
        <input type="submit" onclick="sendData()" class="submit">
            <!-- </form> -->
    </div>
    <table class="table">
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
         <% obj.forEach(function(justOne) { %>
        <tr>
            <td><%= justOne.uuid %></td>
            <td><%= justOne.name %></td>
            <td><a class="update" href="update?id=<%= justOne._id %>">Update Product</a></td>
            <td><a class="delete" href="delete?id=<%= justOne._id %>">Delete Product</a></td>
        </tr>
    <% }); %>
    </table>


    <script src="script.js"></script>
</body>
</html>
